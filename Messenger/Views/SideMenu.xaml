<Page x:Class="Messenger.Views.SideMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Messenger.Views"
      mc:Ignorable="d" 
      d:DesignHeight="760" d:DesignWidth="245"
      Title="SideMenu"
      Style="{StaticResource MessengerPage}">

    <Grid Background="White">

        <StackPanel VerticalAlignment="Top">
            <Button x:Name="BackBut" HorizontalAlignment="left" Click="BackBut_Click"
                   Margin="10 0 0 0" Style="{StaticResource IconButton}">
                <Button.Content>
                    <Image Source="pack://application:,,,/Resources/Icons/Back.png"/>
                </Button.Content>
            </Button>
            <Button Content="Settings" Style="{StaticResource SecBut}" Foreground="Black"
                    Click="SettingsButton_Click"/>
        </StackPanel>
            
    </Grid>
</Page>
